@using AspNetIdentityCoreApp.Web.Areas.Admin.Models;
@{
    ViewData["Title"] = "UserList";
    Layout = "../Shared/_Layout.cshtml";
}
@model List<UserViewModels>
<table class="table table-striped">
    <thead>
        <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Rol Islemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><user-role-names user-id="@item.Id"></user-role-names></td>
                <td><a asp-controller="Role" asp-action="AssingRole" asp-route-id="@item.Id">Rol Ata</a></td>
            </tr>
        }
    </tbody>
</table>