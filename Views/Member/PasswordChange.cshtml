@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@model PasswordChangeViewModel

@if(TempData["SuccesMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccesMessage"]
            </div>
        }
 <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="container-fluid">
                <div class="container justify-content-center align-items-center row">
                    <div class="col-3"></div>

                    <div class="col-6">
            <div class="row mb-3">
                <label for="PasswordOld" class="col-md-2 col-form-label" asp-for="PasswordOld"></Label>
                <div class="col-md-10">
                    <input asp-for="PasswordOld" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PasswordNew" class="col-md-2 col-form-label" asp-for="PasswordNew"></Label>
                <div class="col-md-10">
                    <input asp-for="PasswordNew" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>
             <div class="row mb-3">
                <label for="PasswordConfirm" class="col-md-2 col-form-label" asp-for="PasswordConfirm"></Label>
                <div class="col-md-10">
                    <input asp-for="PasswordConfirm" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>
            </div>
            </div>
            <div class="col-3"></div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
            <button type="submit" class="btn btn-primary">Onayla</button>
            </div>
            </div>
            </div>
            </div>
        </form>    
        </div>
        </div>